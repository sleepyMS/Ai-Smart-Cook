<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.KProject.SmartAiCook.mapper.UserMapper">

    <!-- 새로운 사용자 추가 -->
    <insert id="insertUser" parameterType="SignUpDTO">
        INSERT INTO users (name, id, password, confirmPassword, phone, nick, birth, email, token, createdAt, editedAt, lastLoginAt)
        VALUES (#{name}, #{id}, #{password}, #{confirmPassword}, #{phone}, #{nick}, #{birth}, #{email}, #{token}, NOW(), NOW(), NOW())
    </insert>
<!--    레시피 테이블 제작할 것-->

    <!-- ID로 사용자 조회 -->
    <select id="getUserById" parameterType="string" resultType="UserDTO">
        SELECT * FROM users WHERE id = #{id};
    </select>

    <!-- ID로 사용자 정보 업데이트 -->
    <update id="updateUser" parameterType="UserDTO">
        UPDATE users
        SET name = #{name}, phone = #{phone}
        WHERE id = #{id}
    </update>

    <!-- ID로 사용자 삭제 -->
    <delete id="deleteUser" parameterType="string">
        DELETE FROM users WHERE id = #{id};
    </delete>

    <select id="getUserSelectById" resultType="boolean">
        SELECT * FROM users WHERE id = #{userId}
    </select>

</mapper>